RewriteEngine On
RewriteBase /admin/

# Serve index.php internamente quando acessar /admin/ sem mostrar index.php
RewriteRule ^$ index.php [L]

# Ocultar extens√£o .php nas URLs dentro de /admin/
RewriteCond %{REQUEST_METHOD} =GET
RewriteCond %{THE_REQUEST} \s/admin/([^.]+)\.php[\s?] [NC]
RewriteRule ^ /admin/%1 [R=301,L]

RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)$ $1.php [L]
